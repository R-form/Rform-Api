<h1 class="text-black text-5xl"><%= link_to 'Questionnaires', questionnaires_path %></h1>

<table>
  <thead>
    <tr>
      <th class="text-xl">Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questionnaires.each do |questionnaire| %>
      <tr class="border-2">
        <td class="border-2"><%= questionnaire.name %></td>
        <td class="border-2"><%= link_to 'Show', questionnaire %></td>
        <td class="border-2"><%= link_to 'Edit', edit_questionnaire_path(questionnaire) %></td>
        <td class="border-2"><%= link_to 'Destroy', questionnaire, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Questionnaire', new_questionnaire_path %>
